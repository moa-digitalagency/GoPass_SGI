# Flask Configuration
FLASK_ENV=development
SESSION_SECRET=change_this_to_a_secure_random_string

# Database Configuration
# In production, this MUST be a PostgreSQL URL (e.g., postgresql://user:pass@host:port/dbname)
# SQLite is allowed only in development
DATABASE_URL=sqlite:///instance/gopass.db

# Super Admin Initialization (Required for init_db.py)
# These are used to create the initial Super Admin account.
# In production, the script will fail if these are missing and no admin exists.
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change_this_password

# External APIs
AVIATIONSTACK_API_KEY=your_aviationstack_api_key

# Payment Gateways (Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Telegram Integration
# Key for encrypting Telegram tokens in the database
TELEGRAM_ENCRYPTION_KEY=change_this_to_a_valid_fernet_key
